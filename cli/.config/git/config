[include]
	# local/private config
	path = ~/.config/git/secure

[user]
	name = Robert Kernan

[core]
	editor = $EDITOR
	excludefiles = ~/.config/git/ignore

[credential]
	helper = cache --timeout=3600

[color]
	branch = auto
	diff = auto
	status = auto
	showbranch = auto
	ui = auto

[color "status"]
	added = green
	changed = blue
	untracked = red

[status]
	short = true
	showUntrackedFiles = all

[log]
	date = short

[format]
	pretty = format:%C(yellow)%h %C(blue)%cd %C(magenta)%G? %C(green)%aN%C(red)%d %C(reset)%s

[fetch]
	prune = true

[pull]
	rebase = true

[push]
	default = simple

[rerere]
	enabled = 1

[branch]
	autosetuprebase = always

[merge]
	tool = nvim

[mergetool]
	keepBackup = false
	prompt = false

[mergetool "nvim"]
	cmd = nvim -d -c 'wincmd l' -c 'norm ]c' $LOCAL $MERGED $REMOTE

[alias]
	# stage changes
	a  = add
	aa = add --all
	ap = add --patch
	# unstage changes
	unstage = restore --staged
	# checkout
	co  = checkout
	cob = checkout -b
	# commit
	ci = commit
	# unwind previous commit
	unwind = reset --soft HEAD^
	# scrap previous commit
	scrap  = reset --hard HEAD^
	# amend previous commit
	amend  = commit --amend

[init]
	defaultBranch = develop

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
