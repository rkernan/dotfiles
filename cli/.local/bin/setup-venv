#!/usr/bin/env bash

requirements=${1:-"requirements.txt"}
python=${2:-"python3"}

$python -m venv ".venv"
.venv/bin/python -m pip install pyright

if [[ -f $requirements ]]; then
	.venv/bin/python -m pip install -r "$requirements"
fi

if [ -e "setup.py" ]; then
	.venv/bin/python -m pip install -e .
fi
