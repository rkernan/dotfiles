#!/usr/bin/env bash

set -e

find_project_root() {
  local orig_path=$1
  local path=$orig_path
  while [ $path != "/" ]; do
    if [ -e "${path}/.git" ]; then
      echo $path
      return 0
    fi
    path=$(realpath "${path}/..")
  done
  echo $orig_path
}

path=$(find_project_root $(pwd))
remote=${1:-"nsth9"}
remote_ws=${2:-"/docker-container/workspace"}
name=$(basename $path)

set -x
rsync -av --delete --exclude=build --exclude=.venv ${path}/ ${remote}:${remote_ws}/${name}
